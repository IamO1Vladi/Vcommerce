@{
    ViewData["Title"] = "Products Page";
}
@using System.Drawing
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Vcommerce.Data.Models.Enums
@model ShopListClothingViewModel[];



   
  
  




<!-- START SECTION BREADCRUMB -->
<div class="breadcrumb_section bg_gray page-title-mini">
    <div class="container">
        <!-- STRART CONTAINER -->
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="page-title">
                    <h1>Product List</h1>
                </div>
            </div>
            <div class="col-md-6">
                <ol class="breadcrumb justify-content-md-end">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item">@Model.First().Gender Products</li>
                </ol>
            </div>
        </div>
    </div><!-- END CONTAINER-->
</div>
<!-- END SECTION BREADCRUMB -->
<!-- START MAIN CONTENT -->
<div class="main_content">

    <!-- START SECTION SHOP -->
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="row align-items-center mb-4 pb-1">
                        <div class="col-12">
                            <div class="product_header">
                                <div class="product_header_left">
                                    <div class="custom_select">
                                        <select class="form-control form-control-sm">
                                            <option value="order">Default sorting</option>
                                            <option value="popularity">Sort by popularity</option>
                                            <option value="date">Sort by newness</option>
                                            <option value="price">Sort by price: low to high</option>
                                            <option value="price-desc">Sort by price: high to low</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="product_header_right">
                                    <div class="products_view">
                                        <a href="javascript:Void(0);" class="shorting_icon grid"><i class="ti-view-grid"></i></a>
                                        <a href="javascript:Void(0);" class="shorting_icon list active"><i class="ti-layout-list-thumb"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row shop_container list">
                        @{
                              if (Model.Length > 0)
                              {

                                  @await Html.PartialAsync("PartialViews/_ProductsList",Model);
                                  
                              }
                              else
                              {
                                  <div class="col-lg-3 col-md-4 col-6">
                                      <h1>No products available!</h1>
                                  </div>
                              }
                          }
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <ul class="pagination mt-3 justify-content-center pagination_style1">
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#"><i class="linearicons-arrow-right"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 order-lg-first mt-4 pt-2 mt-lg-0 pt-lg-0">
                    <div class="sidebar">
                        <div class="widget">
                            <h5 class="widget_title">Categories</h5>
                            <ul class="widget_categories">
                                
                                @{
                                    foreach (var category in Model.DistinctBy(m=>m.Category).OrderBy(m=>m.Category))
                                    {
                                        <li><a asp-controller="Product" asp-action="ProductsByCategoryAndGender" asp-route-category="@category.Category" asp-route-gender="@category.Gender"><span class="categories_name">@category.Category</span><span class="categories_num">(@Model.Count(m=>m.Category==category.Category))</span></a></li>
                                    }
                                }
                            </ul>
                        </div>
                        <div class="widget">
                            <h5 class="widget_title">Price Filter</h5>
                            <div class="filter_price">
                                
                                <div id="priceRangeSlider"></div>
                                <p>Selected Price Range: <span id="priceRange"></span></p>
                                
                            </div>
                        </div>
                        <div class="widget">
                            <h5 class="widget_title">Brand</h5>
                            <ul class="list_brand">
                                
                                @{
                                    foreach (var clothing in Model.OrderBy(m=>m.Brand))
                                    {
                                        <li>
                                            <div class="custome-checkbox">
                                                <input class="form-check-input" type="checkbox" name="checkbox" id="@clothing.Brand" value="">
                                                <label class="form-check-label" for="@clothing.Brand"><span>@clothing.Brand</span></label>
                                            </div>
                                        </li>
                                    }
                                }
                               

                            </ul>
                        </div>
                        <div class="widget">
                            <h5 class="widget_title">Color</h5>
                            <div class="product_color_switch">
                               
                                
                                @{
                                    foreach (var clothing in Model.DistinctBy(m=>m.Color).OrderBy(m=>m.Color))
                                    {
                                        <span data-color="@clothing.Color"></span>
                                    }
                                }

                            </div>
                        </div>
                        <div class="widget">
                            <div class="shop_banner">
                                <div class="banner_img overlay_bg_20">
                                    <img src="/assets/images/sidebar_banner_img.jpg" alt="sidebar_banner_img">
                                </div>
                                <div class="shop_bn_content2 text_white">
                                    <h5 class="text-uppercase shop_subtitle">New Collection</h5>
                                    <h3 class="text-uppercase shop_title">Sale 30% Off</h3>
                                    <a href="#" class="btn btn-white rounded-0 btn-sm text-uppercase">Shop Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END SECTION SHOP -->
    

    <!-- START SECTION SUBSCRIBE NEWSLETTER -->
    <div class="section bg_default small_pt small_pb">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="heading_s1 mb-md-0 heading_light">
                        <h3>Subscribe Our Newsletter</h3>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="newsletter_form">
                        <form>
                            <input type="text" required="" class="form-control rounded-0" placeholder="Enter Email Address">
                            <button type="submit" class="btn btn-dark rounded-0" name="submit" value="Submit">Subscribe</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- START SECTION SUBSCRIBE NEWSLETTER -->

</div>




<script>
    $(document).ready(function () {
        var priceRangeSlider = $("#priceRangeSlider");
        var priceRange = $("#priceRange");

        // Initialize the slider
        priceRangeSlider.slider({
            range: true, // Enables the range
            min: 0,      // Minimum value
            max: 10000,   // Maximum value
            step: 10,    // Increment step
            values: [0, 1000], // Initial range values
            slide: function (event, ui) {
                var minValue = ui.values[0];
                var maxValue = ui.values[1];
                priceRange.text("$" + minValue + " - $" + maxValue);
            }
        });

        // Initialize the price range display
        var initialValues = priceRangeSlider.slider("option", "values");
        var initialMin = initialValues[0];
        var initialMax = initialValues[1];
        priceRange.text("$" + initialMin + " - $" + initialMax);
    });
</script>
