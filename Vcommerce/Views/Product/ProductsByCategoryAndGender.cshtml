@{
    ViewData["Title"] = "Products Page";
}
@using System.Drawing
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Newtonsoft.Json
@using Vcommerce.Services.ServiceModels.Filtering
@*@model ShopListClothingViewModel[];*@

@model ClothesQueryModel

@{
    int genderId = (int)Model.Clothes.First().Gender;
    int categoryId = (int)Model.Clothes.First().Category;
}


<!-- START SECTION BREADCRUMB -->
<div class="breadcrumb_section bg_gray page-title-mini">
    <div class="container">
        <!-- STRART CONTAINER -->
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="page-title">
                    <h1>Product List</h1>
                </div>
            </div>
            <div class="col-md-6">
                <ol class="breadcrumb justify-content-md-end">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Product" asp-action="ProductsByGender" asp-route-gender="@Model.Clothes.First().Gender">@Model.Clothes.First().Gender Products</a></li>
                    <li class="breadcrumb-item active">@Model.Clothes.First().Category</li>
                </ol>
            </div>
        </div>
    </div><!-- END CONTAINER-->
</div>
<!-- END SECTION BREADCRUMB -->
<!-- START MAIN CONTENT -->
<div class="main_content">
<form method="get">
    
    <input type="hidden" asp-for="Category" value="@Model.Category" />
    <input type="hidden" asp-for="Gender" value="@Model.Gender" />
    <!-- START SECTION SHOP -->
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="row align-items-center mb-4 pb-1">
                        <div class="col-12">
                            <div class="product_header">
                                <div class="product_header_left">
                                    <div class="custom_select">
                                        <select asp-for="ClothesSorting" class="form-control form-control-sm">
                                            <option value="5">Default sorting</option>
                                            <option value="4">Sort by popularity</option>
                                            <option value="0">Sort by newness</option>
                                            <option value="1">Sort by oldest</option>
                                            <option value="2">Sort by price: low to high</option>
                                            <option value="3">Sort by price: high to low</option>
                                        </select>
                                    </div>

                                </div>
                                <div class="product_header_right">
                                    <div class="products_view">
                                        <a href="javascript:Void(0);" class="shorting_icon grid"><i class="ti-view-grid"></i></a>
                                        <a href="javascript:Void(0);" class="shorting_icon list active"><i class="ti-layout-list-thumb"></i></a>
                                    </div>
                                    <div class="custom_select">
                                        <select asp-for="ClothesPerPage" class="form-control form-control-sm">
                                            <option value="9">Showing default(9)</option>
                                            <option value="6">6</option>
                                            <option value="12">12</option>
                                            <option value="18">18</option>
                                        </select>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                    <div class="row shop_container list">
                        @{
                            if (Model.Clothes.Any())
                            {

                                @await Html.PartialAsync("PartialViews/_ProductsList", Model.Clothes.ToArray())
                                ;

                            }
                            else
                            {
                                <div class="col-lg-3 col-md-4 col-6">
                                    <h1>No products available!</h1>
                                </div>
                            }
                        }
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <ul class="pagination mt-3 justify-content-center pagination_style1">

                                @{
                                    <li class="page-item @(Model.CurrentPage == 1 ? "active" : string.Empty)">

                                        <a class="page-link" asp-controller="Product"
                                           asp-action="ProductsByCategoryAndGender"
                                           asp-route-gender="@genderId"
                                           asp-route-category="@categoryId"
                                           asp-route-currentPage="1"
                                           asp-route-searchTerm="@Model.SearchString"
                                           asp-route-sorting="@((int?)Model.ClothesSorting)">1</a>
                                    </li>

                                    int pages = Model.TotalClothes / Model.ClothesPerPage;
                                    int numberOfPages = (int)Math.Ceiling((double)pages);

                                    for (int i = Model.CurrentPage + 1; i < Model.CurrentPage + 3; i++)
                                    {
                                        if (i >= numberOfPages)
                                        {
                                            break;
                                        }
                                        <li class="page-item">
                                            <a class="page-link"
                                               asp-controller="Product"
                                               asp-action="ProductsByCategoryAndGender"
                                               asp-route-gender="@genderId"
                                               asp-route-category="@categoryId"
                                               asp-route-currentPage="@i"
                                               asp-route-searchTerm="@Model.SearchString"
                                               asp-route-sorting="@((int?)Model.ClothesSorting)">@i</a>
                                        </li>

                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 order-lg-first mt-4 pt-2 mt-lg-0 pt-lg-0">
                    <div class="sidebar">

                        @* <div class="widget">
                            <h5 class="widget_title">Price Filter</h5>
                            <div class="filter_price">

                                <div id="priceRangeSlider"></div>
                                <p>Selected Price Range: <span id="priceRange"></span></p>

                            </div>
                        </div>*@
                        @*  <div class="widget">
                            <h5 class="widget_title">Brand</h5>
                            <ul class="list_brand">

                                @{
                                    foreach (var clothing in Model.Clothes.OrderBy(m=>m.Brand.Name).DistinctBy(b=>b.Brand.Name))
                                    {
                                        <li>
                                            <div class="custome-checkbox">
                                                <input class="form-check-input" type="checkbox" name="checkbox" id="@clothing.Brand.Id" value="">
                                                <label class="form-check-label" for="@clothing.Brand.Id"><span>@clothing.Brand.Name</span></label>
                                            </div>
                                        </li>
                                    }
                                }


                            </ul>
                        </div>*@
                        @* <div class="widget">
                            <h5 class="widget_title">Color</h5>
                            <div class="product_color_switch">


                                @{
                                    foreach (var clothing in Model.DistinctBy(m => m.Color).OrderBy(m => m.Color))
                                    {
                                        <span data-color="@clothing.Color"></span>
                                    }
                                }

                            </div>
                        </div>*@
                        <div class="customer-select text-center mb-3">
                            <button type="submit" class="btn btn-info">Apply filters</button>
                        </div>

                        <div class="custom_select mb-3">
                            <select asp-for="Brand" class="form-control form-control-sm">
                                @{
                                    <option value="">No filter</option>
                                    foreach (var clothing in Model.Clothes.OrderBy(m => m.Brand.Name).DistinctBy(b => b.Brand.Name))
                                    {
                                        <option value="@clothing.Brand.Name">@clothing.Brand.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="input-group rounded mb-3">
                            <input asp-for="SearchString" type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon"/>
                            <span class="input-group-text border-0" id="search-addon">
                                <a asp-controller="Product"
                                   asp-action="ProductsByCategoryAndGender"
                                   asp-route-gender="@genderId"
                                   asp-route-category="@categoryId"
                                   asp-route-currentPage="1"
                                   asp-route-searchTerm="@Model.SearchString"
                                   asp-route-sorting="@((int?)Model.ClothesSorting)">
                                    <i class="fas fa-search"></i>
                                </a>
                            </span>
                        </div>

                        <div class="widget">
                            <div class="shop_banner">
                                <div class="banner_img overlay_bg_20">
                                    <img src="/assets/images/sidebar_banner_img.jpg" alt="sidebar_banner_img">
                                </div>
                                <div class="shop_bn_content2 text_white">
                                    <h5 class="text-uppercase shop_subtitle">New Collection</h5>
                                    <h3 class="text-uppercase shop_title">Sale 30% Off</h3>
                                    <a href="#" class="btn btn-white rounded-0 btn-sm text-uppercase">Shop Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END SECTION SHOP -->

</form>
    <!-- START SECTION SUBSCRIBE NEWSLETTER -->
<div class="section bg_default small_pt small_pb">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="heading_s1 mb-md-0 heading_light">
                    <h3>Subscribe Our Newsletter</h3>
                </div>
            </div>
            <div class="col-md-6">
                <div class="newsletter_form">
                    <form>
                        <input type="text" required="" class="form-control rounded-0" placeholder="Enter Email Address">
                        <button type="submit" class="btn btn-dark rounded-0" name="submit" value="Submit">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- START SECTION SUBSCRIBE NEWSLETTER -->

</div>



