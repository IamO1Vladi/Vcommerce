@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Vcommerce.Web.ViewModels.Brands.AddOrEditBrandViewModel


<!DOCTYPE html>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta2/dist/css/bootstrap-select.min.css" rel="stylesheet">


<div class="container mt-4">

    <form method="post" enctype="multipart/form-data">
        <!-- Hidden field for Id -->
        <input type="hidden" name="Id" value="">

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name:</label>
            <input asp-for="Name" type="text" placeholder="Enter clothing name here" class="form-control" id="Name" name="Name">
        </div>


        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description:</label>
            <textarea asp-for="Description" placeholder="Enter description here:" class="form-control" id="Description" name="Description"></textarea>
        </div>


        <div class="mb-3">
            <label asp-for="Image" class="form-label">Select image to upload:</label>
            <input asp-for="Image" type="file" class="form-control" id="Image" name="Image" accept="image/*" >
        </div>

        <button type="submit" class="btn btn-primary" value="Save">Submit</button>
        <button type="button" class="btn btn-secondary" id="cancelButton">Cancel</button>

    </form>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta2/dist/js/bootstrap-select.min.js"></script>




<script>
    document.getElementById('cancelButton').addEventListener('click', function () {
        window.history.back(); // Navigate back to the previous page
    });
</script>
