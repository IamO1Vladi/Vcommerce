@{
    ViewData["Title"] = "Home Page";
}
<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> houses.
        <br />You can <b>rent</b> and <b>leave</b> the free ones, too!
    </p>
    <p class="lead mt-1">
        You can also see <b>all users and agents</b> and <b>all rents</b> in the
        system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Blog" asp-action="Add"
       class="btn btn-primary btn-lg">Add Blog Post</a>
    <span> | </span>
    <a  asp-controller="Collection" asp-action="Add"
       class="btn btn-primary btn-lg">Add Collection</a>
    <span> | </span>
    <a  asp-controller="Brand" asp-action="Add"
       class="btn btn-primary btn-lg">Add Brand</a>
    
    <a  asp-controller="Product" asp-action="Add"
       class="btn btn-primary btn-lg">Add Clothing Product</a>
    
    <a  asp-controller="Blog" asp-action="ListAllBlogPosts"
       class="btn btn-primary btn-lg">List All Blog Posts</a>
    
    <a  asp-controller="Collection" asp-action="CollectionsList"
       class="btn btn-primary btn-lg">List All Collections</a>
    
    <a  asp-controller="Brand" asp-action="BrandsList"
       class="btn btn-primary btn-lg">List All Brads </a>

    <a asp-area="Admin" asp-controller="Users" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>

</div>